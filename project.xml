<?xml version="1.0"?>
<project type="activity" builder="java">
  <name>Panoramic image viewer master</name>
  <description>
      Pano viewer master
  </description>

  <identifyingName>com.endpoint.lg.panoviewer.master</identifyingName>
  <version>1.2.3</version>

  <resources>
    <resource destinationDirectory="webapp/js/lib/jquery"
      sourceFile="${project.home}/../activity-resources/web/js/external/jquery/jquery-2.0.3.min.js" />
    <resource destinationDirectory="webapp/js/lib/require"
      sourceFile="${project.home}/../activity-resources/web/js/external/require/require.min.js" />
    <resource destinationDirectory="webapp/js/lib/require"
      sourceFile="${project.home}/../activity-resources/web/js/external/require/async.js" />
    <resource destinationDirectory="webapp/js/lib/stapes"
      sourceFile="${project.home}/../activity-resources/web/js/external/stapes/stapes.min.js" />
    <resource destinationDirectory="webapp/js/is"
      sourceDirectory="${project.home}/../activity-resources/web/js/is" />
    <resource destinationDirectory="webapp/js/common"
      sourceDirectory="${project.home}/../activity-resources/web/js/common" />
    <resource destinationDirectory="webapp/js/streetview"
      sourceDirectory="${project.home}/../activity-resources/web/js/streetview" />
  </resources>

  <deployments>
    <deployment type="testdeploy" location="${deployment.test.deploy}" />
    <deployment type="testimport" location="${deployment.test.import}" />
  </deployments>

  <activity type="interactivespaces_native">
      <name>comEndpointLgPanoViewerMaster</name>
      <class>com.endpoint.lg.panoviewer.PanoViewerMasterActivity</class>
      <configuration>
          <property name="space.activity.group">
              <value>generic</value>
          </property>
          <property name="space.activity.log.level">
              <value>info</value>
          </property>
          <property name="space.activity.webapp.content.location">
              <value>webapp</value>
          </property>
          <property name="space.activity.webapp.url.initial">
              <value>pano.html</value>
          </property>
            <property name="space.activity.webapp.browser.debug">
                <value>false</value>
            </property>
            <property name="space.activity.ros.node.name">
                <value>liquidgalaxy/panoviewer/${lg.window.viewport.target}</value>
            </property>
            <property name="space.activity.routes.inputs">
                <value>director:EV_ABS</value>
            </property>
            <property name="space.activity.route.input.director">
                <value>/director/scene</value>
            </property>
            <property name="space.activity.route.input.EV_ABS">
                <value>/liquidgalaxy/${space.activity.group}/evdev/default/rel</value>
            </property>
            <property name="space.activity.routes.outputs">
                <value>pano_viewsync</value>
            </property>
            <property name="space.activity.route.output.pano_viewsync">
                <value>/liquidgalaxy/${space.activity.group}/panoviewer/viewsync</value>
            </property>
            <property name="lg.window.viewport.target">
                <value>default</value>
            </property>
      </configuration>
  </activity>
</project>
